<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        >

        <ImageView
            android:id="@+id/iv_ListimageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvPokeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:text="Pokemon Name"
            android:layout_marginStart="5dp"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_ListimageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_ListimageView"
            app:layout_constraintTop_toTopOf="@id/iv_ListimageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>